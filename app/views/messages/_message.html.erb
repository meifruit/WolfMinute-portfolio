<div id="message-<%= message.id %>">
  <div class="d-flex">
    <%= image_tag message.user.photo.key ? cl_image_path(message.user.photo.key) :  "gorilla.jpg", class:"avatar-small me-2" %>
    <div>
      <small>
        <strong><%= message.user.name %></strong>
        <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
      </small>
      <p><%= message.content %></p>
    </div>
  </div>
</div>
